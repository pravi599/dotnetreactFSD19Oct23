@model FirstWebApplication.Models.Customer


<h1>Delete Customer</h1>

<p>Are you sure you want to delete this customer?</p>
<dl class="row">
    <dt class="col-sm-2">Email</dt>
    <dd class="col-sm-10">@Model.Email</dd>
    <dt class="col-sm-2">First Name</dt>
    <dd class="col-sm-10">@Model.FirstName</dd>
    <dt class="col-sm-2">Last Name</dt>
    <dd class="col-sm-10">@Model.LastName</dd>
    <dt class="col-sm-2">Age</dt>
    <dd class="col-sm-10">@Model.Age</dd>
    <dt class="col-sm-2">Phone</dt>
    <dd class="col-sm-10">@Model.Phone</dd>
    <!-- Include other customer details -->
</dl>

<form asp-action="Delete" method="post">
    <input asp-for="Email" type="hidden" />

    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

